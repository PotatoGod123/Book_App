<section>
        <div>
            <img src="<%= book.image %>">
            <h4 id="title"><%= book.title %></h4>
            <h5><%= book.author %></h5>
            <div class="paragraphContainer">
                <p><%= book.description %></p>
            </div>
            <h5>ISBN: <%=book.isbn %></h5>
            <h5>Bookshelf: <%=book.bookshelf %></h5>
        </div>
        <div>
            <button id='updateForm'>update details</button>
            <form action="/delete/<%=book.id%>?_method=DELETE" method="POST">
            <button type="submit">delete book</button>
            </form>
        </div>
        
</section>