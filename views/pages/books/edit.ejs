<section id="hiddenForm" class="hidden">
  <form>
    <fieldset>
      <input type="text" name="title" placeholder="<%= book.title %>" />
      <input type="text" name="author" placeholder="<%= book.author %>" />
      <input type="text" name="isbn" placeholder="<%= book.isbn %>" />
      <input type="text" name="image" placeholder="<%= book.image %>" />
      <textarea type="text" name="description" placeholder="<%= book.description %>" cols="30" rows="10" ></textarea>
      <select type="text" name="bookshelf">
        <option value="<%= book.bookshelf %>"><%= book.bookshelf %></option>
      </select>
      <br><br>
      <button type="submit">Update Book</button>
    </fieldset>
  </form>
</section>