<% if(flag==='details' ){ %>
  <section id="hiddenForm" class="hidden">
    <form action="/update/<%=book.id%>?_method=PUT" method="POST">
      <fieldset>
        <input type="text" value="<%=book.title%>" name="title" placeholder="<%= book.title %>" />
        <input type="text" value="<%=book.author%>" name="author" placeholder="<%= book.author %>" />
        <input type="text" value="<%=book.isbn%>" name="isbn" placeholder="<%= book.isbn %>" />
        <input type="text" value="<%=book.image%>" name="image" placeholder="<%= book.image %>" />
        <textarea type="text" value="<%=book.description%>" name="description" placeholder="<%= book.description %>"
          cols="30" rows="10"><%=book.description%></textarea>
        <select type="text" name="bookshelf">
          <option value="<%= book.bookshelf %>">
            <%= book.bookshelf %>
          </option>
        </select>
        <br><br>
        <button type="submit">Update Book</button>
      </fieldset>
    </form>
  </section>
  <%}else if(flag==='search' ){%>
    <% results.forEach(book=> { %>
      <div>
        <img src="<%= book.image %>">
        <h4 id="title">
          <%= book.title %>
        </h4>
        <h5>
          <%= book.author %>
        </h5>
        <div>
          <p>
            <%= book.description %>
          </p>
        </div>
      </div>
      <form action="/books/add" method="POST">
        <fieldset>
          <div class="addButtonContainer">

            <input type="hidden" name="title" value="<%= book.title %>" />
            <input type="hidden" name="author" value="<%= book.author %>" />
            <input type="hidden" name="description" value="<%= book.description %>" />
            <input type="hidden" name="isbn" value="<%= book.isbn %>" />
            <input type="hidden" name="image" value="<%= book.image %>" />
            <input type="hidden" name="bookshelf" value="<%= book.bookshelf %>" />
            <button type="submit">Save Book</button>

          </div>
        </fieldset>
      </form>
      <% }) %>


        <% }%>